@using WebApplication2.Models
@{
    ViewBag.Title = "EditPermistions";
}



<h2 style="color:snow">Edit Permistions</h2>
<br />
<br />

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
        body {
            background-image: url('../../img/black.jpg');
            background-size: cover;
        }


        .header {
            padding: 30px;
            text-align: center;
            color: #5a3a11;
            font-size: 40px;
        }





        .content {
            padding: 20px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("UpdatePermissions", "MangeProject", FormMethod.Post))
    {
        <div class="container">

            <br />

            <table class="table">
                <thead>
                    <tr style="color:sandybrown">
                        <th>Member name</th>
                        <th>Premission</th>
                        <th></th>

                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @{ 
                        int i = 1;
                    }
                    @foreach (PrivateProjects B in ViewBag.membs)
                    {
                        
                    <tr style="color:white">
                        <td> @B.User</td>
                        <td>
                            
                           @* <form>*@
                                @{ if (B.IsPrivate == false)
                                    {
                                        <label class="radio-inline">
                                            <input type="radio" style="color:white" name=@i.ToString() value="On" checked>On
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" style="color:white" name=@i.ToString() value="Off">Off
                                        </label>
                                    }
                                    else
                                    {
                                        <label class="radio-inline">
                                            <input type="radio" style="color:white" name=@i.ToString() value="On">On
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" style="color:white" name=@i.ToString() checked value="Off">Off
                                        </label>
                                    }


                                }

                            @*</form>*@

                        </td>
                        <td></td>

                        <td></td>
                    </tr>
                        i++;
                    }
                </tbody>
            </table>


        </div>
        <button  style="background-color:black ; color:white " type="submit">Confirm</button>
    }

</body>
</html>

