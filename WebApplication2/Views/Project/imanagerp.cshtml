@model  WebApplication2.ViewModels.ProjectMv

@using WebApplication2.Models
    
    @using WebApplication2.Models;
    @{
        ViewBag.Title = "My Project";
    }

<h2 style="color:snow">My Project</h2>
    <br />
    <br />

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <style>
            body {
                background-image: url('../../img/black.jpg');
                background-size: cover;
            }


            .header {
                padding: 30px;
                text-align: center;
                color: #5a3a11;
                font-size: 40px;
            }


            .content {
                padding: 20px;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <table class="table">
                <thead>
                    <tr style="color:sandybrown">
                        <th>Project ID</th>
                        <th>Project Name</th>
                        <th>User Name </th>
                        <th>Edit Permissions</th>
                        <th>Project Files</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (Project B in Model.project)
                    {
                    <tr style="color:white">
                        <td> @B.Id </td>
                        <td>|@B.ProjectName</td>
                        <td>|@B.UserName </td>
                        <td>|@Html.ActionLink("Edit", "EditPermistions", "MangeProject", new { projectid = B.Id }, null) </td>
                        @{
                            string path = Server.MapPath("~/Uploads/" + B.UserName+"_"+B.ProjectName + "/");
                            if (!Directory.Exists(path))
                            {
                                <td>|@Html.ActionLink("Create", "firstPart", "MangeProject", new { projectid = B.Id }, null) </td>

                            }

                            else
                            {
                                <td>
                                    |@Html.ActionLink("Upload", "UploadPage", "MangeProject", new { projectid = B.Id }, null)
                                    |@Html.ActionLink("Download", "Download", "MangeProject", new { projectid = B.Id }, null)
                                </td>


                            }

                        }
                    </tr>

                            }
</tbody>
            </table>
        </div>





       <span style="color:coral">@ViewBag.ss</span>
    </body>









</html>


